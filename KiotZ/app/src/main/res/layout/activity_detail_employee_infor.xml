<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgstatus"
    tools:context=".views.managers.activities.DetailEmployeeInforActivity">

    <TextView
        android:id="@+id/tvHeadingDetailEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information of employee"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:src="@drawable/infor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHeadingDetailEmployee"
        app:layout_constraintBottom_toBottomOf="@id/tvHeadingDetailEmployee"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"

        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeadingDetailEmployee"
        android:background="@drawable/bgframe"
        android:padding="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        >

        <TextView
            android:id="@+id/tvIDEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="ID: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvIDEmployeeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvIDEmployee"
            android:text="jdhasdhapsdasufya"
            app:layout_constraintStart_toEndOf="@id/tvIDEmployee"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvNameEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIDEmployee"
            android:text="Name: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvNameEmployeeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvNameEmployee"
            android:text="Tran Vu Anh Tri"
            app:layout_constraintStart_toEndOf="@id/tvNameEmployee"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvEmailEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNameEmployee"
            android:text="Email: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvEmailEmployeeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvEmailEmployee"
            android:text="anhtri@gmail.com"
            app:layout_constraintStart_toEndOf="@id/tvEmailEmployee"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvGenderEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEmailEmployee"
            android:text="Gender: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvGenderEmployeeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvGenderEmployee"
            android:text="Male"
            app:layout_constraintStart_toEndOf="@id/tvGenderEmployee"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvDateEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGenderEmployee"
            android:text="Date: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvDateEmployeeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvDateEmployee"
            android:text="10/10/2004"
            app:layout_constraintStart_toEndOf="@id/tvDateEmployee"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvPositionEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDateEmployee"
            android:text="Position: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvPositionEmployeeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvPositionEmployee"
            android:text="Manager"
            app:layout_constraintStart_toEndOf="@id/tvPositionEmployee"
            android:layout_marginStart="10dp"

            />

        <ImageView
            android:id="@+id/iconAvatarRole"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/tvPositionEmployee"
            app:layout_constraintStart_toStartOf="@id/tvPositionEmployee"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_manager"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View

        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/constraintContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>