<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/tvConfirmDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Product"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bginfor"
        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvIDConfirmDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            />

        <TextView
            android:id="@+id/tvIDConfirmDialogContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MG001"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvNameConfirmDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            />

        <TextView
            android:id="@+id/tvNameConfirmDialogContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hao Hao noodles"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvUnitConfirmDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Unit: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/tvUnitConfirmDialogContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pack"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvPriceConfirmDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/tvPriceConfirmDialogContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3000 VND"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvQuantityConfirmDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <EditText
            android:id="@+id/editTextQuantityConfirmDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            />



    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvTotalPriceConfirmDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total price: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/tvTotalPriceConfirmDialogContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9000 VND"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear6"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCancelConfirmDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bginfor"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirmDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bginfor"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            />


    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>