<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:id="@+id/tv_employee_id_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="ID00dkạd kđk akal"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="#45664C"
                app:layout_constraintStart_toEndOf="@+id/iv_employee_avatar_delete"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageViewRecycleBin"
                android:ellipsize="none"
                android:maxLines="4"
                android:textStyle="bold"

                 />

            <ImageView
                android:id="@+id/iv_employee_avatar_delete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_employee" />

            <TextView
                android:id="@+id/tv_employee_name_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="#45664C"
                app:layout_constraintTop_toBottomOf="@+id/tv_employee_id_delete"
                app:layout_constraintStart_toStartOf="@+id/tv_employee_id_delete"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                />

            <ImageView
                android:id="@+id/imageViewRecycleBin"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/recyclebin"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>