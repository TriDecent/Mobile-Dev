<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_inventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/gioi_tinh_tv_form14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_employee_id" />

            <TextView
                android:id="@+id/tv_employee_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="NV001"

                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/avatar_nv_iv_form14"
                app:layout_constraintTop_toTopOf="@id/avatar_nv_iv_form14" />

            <TextView
                android:id="@+id/tv_employee_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Nguyễn Văn A"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="#45664C"
                app:layout_constraintStart_toEndOf="@+id/avatar_nv_iv_form14"
                app:layout_constraintTop_toBottomOf="@+id/tv_employee_id" />

            <ImageView
                android:id="@+id/avatar_nv_iv_form14"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/generic_avatar_icon" />

            <TextView
                android:id="@+id/ngay_sinh_tv_form14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/1/1977"
                app:layout_constraintEnd_toEndOf="@id/gioi_tinh_tv_form14"
                app:layout_constraintTop_toBottomOf="@id/gioi_tinh_tv_form14"
                android:layout_marginTop="10dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

